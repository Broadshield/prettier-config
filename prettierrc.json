{
  "$schema": "http://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "indent": 2,
  "useTabs": false,
  "printWidth": 100,
  "bracketSameLine": true,
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
    "trailingComma": "es5",
	"bracketSpacing": true,
	"parenSpacing": true,
    "jsxBracketSameLine": false,
	"semi": true,
	"arrowParens": "always",
    "singleQuote": true,

  "overrides": [
    {
      "files": "package*.json",
      "options": {
        "printWidth": 1000
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "options": {
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "semi": true
      }
    },
    {
      "files": ["**/*.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["**/*.md"],
      "options": {
        "parser": "markdown",
        "proseWrap": "preserve"
      }
    }
  ]
}
