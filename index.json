{
  "$schema": "http://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "indent": "space",
  "printWidth": 100,
  "bracketSameLine": true,
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["**/*.json"],
      "options": {
        "parser": "json5"
      }
    },
    {
      "files": ["**/*.md"],
      "options": {
        "parser": "markdown",
        "proseWrap": "preserve"
      }
    }
  ]
}
